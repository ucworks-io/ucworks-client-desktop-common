{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "outDir": "./lib",
    "rootDirs": [
      "./src",
      "./examples"
    ],
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "esModuleInterop": true,
    "types": [
      "@emotion/react/types/css-prop",
      "@types/jest"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}